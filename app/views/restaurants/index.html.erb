<div class="container">
  <h1>Restaurants</h1>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <%= restaurant.name %>
          <p><%= restaurant.category %></p>
          <%= link_to 'More', restaurant, class: "button-white-fixed-right"%>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'New Restaurant', new_restaurant_path %>
</div>

